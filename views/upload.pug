extends layouts/main

block content
    .form-container
        form(action=routes.upload, method="post", id="uploadForm")
            label(for="videoFile") Video File
            input(type="file", id="videoFile", name="videoFile")
            input(type="text", name="title", placeHolder="Title")
            textarea(rows="2", cols="30", name="description", form="uploadForm", placeHolder="Description")
            input(type="submit", value="Update Profile")